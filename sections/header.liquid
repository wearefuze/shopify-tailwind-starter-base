								<a href="{{ link.url }}" class="twcss-px-5 twcss-py-4 twcss-top-0 twcss-group twcss-overflow-hidden twcss-font-medium twcss-bg-transparent twcss-text-brand-midnight twcss-inline-block">
									<span class="twcss-absolute -twcss-top-1 twcss-left-0 twcss-flex twcss-w-full twcss-h-0 twcss-mb-0 twcss-transition-all twcss-duration-300 twcss-ease-out twcss-transform twcss-translate-y-0 twcss-bg-brand-orange group-hover:twcss-h-full twcss-opacity-90 {%- if link.current  %}twcss-h-full{% endif %}"></span>
									<span class="twcss-relative group-hover:twcss-text-white twcss-uppercase">{{ link.title }}</span>
								</a>
							</div>
						{% endif %}
					{%endfor%}
				</div>
			</div>
		</div>
	</nav>
	<div x-cloak x-show="showClearance" x-transition.duration.300ms class="twcss-bg-brand-red">
		<div class="twcss-container twcss-flex twcss-justify-center">
			<a class="twcss-text-core-white twcss-py-4 hover:twcss-underline twcss-transition-all twcss-duration-300" href="{{ section.settings.clearance-banner-link }}">{{ section.settings.clearance-banner-text }}</a>
		</div>
	</div>
</div>



