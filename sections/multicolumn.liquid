<section class="twcss-container {{ section.settings.padding_top }} {{ section.settings.padding_bottom }}">
  <div class="twcss-grid twcss-grid-cols-{{ section.settings.columns_mobile }} lg:twcss-grid-cols-{{ section.settings.columns_desktop }} twcss-gap-8 twcss-content-stretch">
    {%- for block in section.blocks -%}
      <div class="twcss-col-span-1">
        {%- if block.settings.link -%}
          {% if section.settings.link_style == "image" %}
            <a href="{{ block.settings.link }}" class="twcss-group" title="{{ block.settings.link_label }}">
              <div class="twcss-rounded-lg twcss-overflow-hidden twcss-transition-all twcss-duration-300" style="background-color: {{ block.settings.background_colour }}; color: {{ block.settings.text_colour }};">
                {{
                block.settings.image
                | image_url: width: 3200
                | image_tag:
                loading: 'lazy',
                widths: '50, 75, 100, 150, 200, 300, 400, 500, 750, 1000, 1250, 1500, 1750, 2000, 2250, 2500, 2750, 3000, 3200',
                sizes: sizes,
                class: 'twcss-h-full twcss-w-full twcss-object-cover twcss-rounded-lg hover:twcss-scale-110 twcss-transition-all twcss-duration-300'
                }}
              </div>
            </a>
          {% else %}
            <div class="twcss-rounded-lg" style="background-color: {{ block.settings.background_colour }}; color: {{ block.settings.text_colour }};">
              <div class="twcss-rounded-lg twcss-overflow-hidden twcss-transition-all twcss-duration-300" >
                {{
                block.settings.image
                | image_url: width: 3200
                | image_tag:
                loading: 'lazy',
                widths: '50, 75, 100, 150, 200, 300, 400, 500, 750, 1000, 1250, 1500, 1750, 2000, 2250, 2500, 2750, 3000, 3200',
                sizes: sizes,
                class: 'twcss-h-full twcss-w-full twcss-object-cover twcss-rounded-lg hover:twcss-scale-110 twcss-transition-all twcss-duration-300'
                }}
              </div>
              <div class="twcss-flex twcss-justify-center">
                <div class="twcss-py-8 twcss-text-center">
                  {%- if block.settings.title -%}
                    <h2 class="twcss-text-3xl twcss-w-3/4 twcss-mx-auto twcss-pb-4">{{ block.settings.title }}</h2>
                  {%- endif -%}
                  {%- if block.settings.text -%}
                    <div class="twcss-pb-4 twcss-w-3/4 twcss-mx-auto">
                      {{ block.settings.text }}
                    </div>
                  {%- endif -%}
                  <a href="{{ block.settings.link }}" class="twcss-group" title="{{ block.settings.link_label }}">
                    <button class="twcss-border-2 twcss-border-core-white twcss-rounded-lg twcss-text-core-white twcss-px-8 twcss-py-4 twcss-text-lg twcss-font-semibold twcss-bg-transparent group-hover:twcss-bg-core-white group-hover:twcss-text-core-black twcss-transition-all twcss-duration-300">{{ block.settings.link_label }}</button>
                  </a>
                </div>
              </div>
            </div>
          {% endif %}
        {%- else -%}
          {{
            block.settings.image
            | image_url: width: 3200
            | image_tag:
            loading: 'lazy',
            widths: '50, 75, 100, 150, 200, 300, 400, 500, 750, 1000, 1250, 1500, 1750, 2000, 2250, 2500, 2750, 3000, 3200',
            sizes: sizes,
            class: 'twcss-h-auto twcss-w-full twcss-object-contain'
          }}
        {%- endif -%}
      </div>
    {%- endfor -%}
  </div>
</section>

{% schema %}
